<div class="flex flex-col max-w-3xl w-full mx-auto">
<div class="flex justify-between items-center">
  <%= link_to "Back to All Listings", listings_path, class: "bg-gray-100 rounded-lg border-2 border-gray-900 mr-auto p-2" %>
  <%= link_to "Edit listing", edit_listing_path(@listing) %>
</div>
<br/>
<% if @listing.images.any? %>
<div class="flex gap-8 rounded-lg overflow-hidden relative">
  <%= image_tag @listing.images.first, class: "w-80 h-80" %>
  <div class="grid grid-cols-2 gap-8 flex-wrap">
    <% @listing.images[1..4].each do |image| %> 
      <%= image_tag image, class: "h-36" %>
    <% end %>
  </div>
  <%= link_to "Show all photos", photos_listing_path(@listing), class: "absolute bottom-0 right-0 bg-white rounded-lg p-2" %>
</div>

<% end %>
<br/>
<h1 class="text-2xl font-semibold"> <%= @listing.title %> </h1>
<%= @listing.description %>

  <div class="grid grid-cols-3 gap-8 mt-8">
    <div class="shadow-lg bg-gray-100 p-4 rounded-lg">
      <div class="text-sm text-gray-600">Bedrooms</div>
      <div class="text-2xl font-semibold"><%= @listing.bedrooms || "—" %></div>
    </div>
    <div class="shadow-lg bg-gray-100 p-4 rounded-lg">
      <div class="text-sm text-gray-600">Bathrooms</div>
      <div class="text-2xl font-semibold"><%= @listing.bathrooms || "—" %></div>
    </div>
    <div class="shadow-lg bg-gray-100 p-4 rounded-lg">
      <div class="text-sm text-gray-600">Guests</div>
      <div class="text-2xl font-semibold"><%= @listing.people_limit || "—" %></div>
    </div>
  </div>
</div>