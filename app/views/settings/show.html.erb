<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-2xl shadow-lg border border-gray-100">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Update Your Settings</h1>

  <%= form_with model: current_user, url: settings_path, class: "space-y-6", method: :post do |f| %>

    <!-- First + Last Name -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :first_name, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :first_name,
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                      focus:ring-indigo-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :last_name, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :last_name,
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                      focus:ring-indigo-400 focus:outline-none" %>
      </div>
    </div>

    <!-- Address 1 -->
    <div>
      <%= f.label :address_1, class: "block text-sm font-semibold text-gray-700 mb-1" %>
      <%= f.text_field :address_1,
            class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                    focus:ring-indigo-400 focus:outline-none" %>
    </div>

    <!-- Address 2 -->
    <div>
      <%= f.label :address_2, class: "block text-sm font-semibold text-gray-700 mb-1" %>
      <%= f.text_field :address_2,
            class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                    focus:ring-indigo-400 focus:outline-none" %>
    </div>

    <!-- City + State -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :city, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :city,
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                      focus:ring-indigo-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :state, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :state,
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                      focus:ring-indigo-400 focus:outline-none" %>
      </div>
    </div>

    <!-- Country + Zipcode -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :country, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :country,
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                      focus:ring-indigo-400 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :zip_code, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :zip_code,
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 
                      focus:ring-indigo-400 focus:outline-none" %>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="pt-4">
      <%= f.submit "Save Changes",
            class: "w-full py-3 rounded-lg font-semibold text-white 
                    bg-gradient-to-r from-indigo-500 to-pink-500 shadow-lg 
                    hover:opacity-90 transition" %>
    </div>

    <div class="max-w-xl mx-auto mt-10 bg-white">
         <h3 class="text-2xl font-bold mb-6 text-gray-800"> Additional Settings </h3>       
         <%= link_to "Change Email/Password", edit_user_registration_path, 
         class: "px-4 py-2 rounded-lg border border-gray-200 bg-gray-50 hover:bg-gray-100 transition" %>
  </div>
  
  <div class="flex flex-col"">
          <%= f.label :about_me %>
          <%= f.rich_text_area :about_me %>
  </div>

  <% end %>

  

</div>
